<div class="page-header">
  <h1>This is the list of statuses</h1>
</div>

<%= link_to "Post a New Status!", new_status_path, class: "btn btn-primary" %>

<% @statuses.each do |status|%> 
<div class="status">
  <p><strong><%= status.name %> says:</strong></p>
  <p>"<%=status.context%>"
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
      <span class="admin">
        | <%= link_to "Edit", edit_status_path(status) %>
        | <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure you want to delete this status?' } %>
      </span>
    </div>
  </p>
</div>

<% end %>
